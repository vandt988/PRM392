<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <view
        android:id="@+id/viewHeader"
        class="androidx.constraintlayout.widget.ConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Application status"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@id/viewHeader"
        app:layout_constraintEnd_toEndOf="@id/viewHeader"
        app:layout_constraintStart_toStartOf="@id/viewHeader"
        app:layout_constraintTop_toTopOf="@id/viewHeader" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="10dp"
        android:background="?attr/selectableItemBackgroundBorderless"

        android:src="@drawable/ic_btn_back"

        app:layout_constraintBottom_toBottomOf="@id/viewHeader"
        app:layout_constraintStart_toStartOf="@id/viewHeader"
        app:layout_constraintTop_toTopOf="@id/viewHeader" />

    <EditText
        android:id="@+id/edt_search_application"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btn_search_application"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Search"

        />

    <RadioGroup
        android:id="@+id/rg_application_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flow">

        <RadioButton
            android:id="@+id/ra_unread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa đọc" />

        <RadioButton
            android:id="@+id/ra_unprocess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa xử lý"

            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            />

        <RadioButton
            android:id="@+id/ra_processed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã xử lý" />
    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingBottom="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rg_application_status" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="10dp"

        app:constraint_referenced_ids="edt_search_application,btn_search_application"

        app:flow_horizontalGap="10dp"
        app:flow_verticalAlign="baseline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewHeader" />

</androidx.constraintlayout.widget.ConstraintLayout>