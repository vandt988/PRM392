<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    android:layout_margin="10dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp">

        <View
            android:id="@+id/view_status"
            android:layout_width="match_parent"

            android:layout_height="70sp"
            android:background="@color/green"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Approved"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/white"

            app:layout_constraintTop_toTopOf="@id/view_status"
            app:layout_constraintBottom_toBottomOf="@id/view_status"
            app:layout_constraintEnd_toEndOf="@+id/view_status"
            app:layout_constraintStart_toStartOf="@+id/view_status"

            />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Type: Đề nghị cấp bảng điểm quá trình"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/blue"

            android:layout_margin="10dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_status" />

        <TextView
            android:id="@+id/tv_date_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Create date: 17/05/2025"
            android:textSize="18sp"
            android:textColor="@color/black"

            android:layout_margin="10dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_type"
            />

        <TextView
            android:id="@+id/tv_response_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Yêu cầu đã được xử lý, em vui lòng qua nhận kết quả tại phòng Dịch vụ sinh viên, tòa nhà Alpha"
            android:textSize="18sp"
            android:textColor="@color/black"

            android:layout_margin="10dp"
            android:paddingEnd="10dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_date_create"
            />

        <TextView
            android:id="@+id/tv_request_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Công ty thực tập cần"
            android:textSize="18sp"
            android:textColor="@color/black"

            android:layout_margin="10dp"
            android:paddingEnd="10dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_response_message"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>